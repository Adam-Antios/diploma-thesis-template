% The inner and outer margins are used for two-sided documents.
\RequirePackage
[%
  top = 3cm,
  bottom = 3cm,
  inner = 3.5cm,
  outer = 2.5cm,
  headheight = 1cm,
  headsep = 1cm,
  footskip = 1.5cm
]{geometry}

%===============================================================================
%
%===============================================================================

\RequirePackage{titlesec}

\titleformat{\chapter}[display]{\bfseries\centering}{
    {\Large Chapter}\\[0.5cm]
    \scalebox{9}{
        \color{CustomColour}{\thechapter}
    }
}{0.5cm}{\Large}[\vspace{5cm}]

\titleformat{\section}[hang]{\bfseries\centering}{
    \large \thesection
}{1em}{\large}

\titleformat{\subsection}[hang]{\bfseries\centering}{
    \large \thesubsection
}{1em}{\large}

%===============================================================================
%
%===============================================================================

\RequirePackage{fancyhdr}

\fancyhead[LE,RO]{}
\fancyhead[RE,LO]{}

\fancyhead[CO]{\slshape\nouppercase{\rightmark}}
\fancyhead[CE]{\slshape\nouppercase{\leftmark}}

\renewcommand{\headrulewidth}{0pt}

