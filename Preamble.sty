%
%===============================================================================

\RequirePackage{listings}

\lstset
{
    basicstyle=\ttfamily,
    %
    showspaces=false,
    showstringspaces=false,
    %
    numbers=left,
    numbersep=5pt,
    numberstyle=\footnotesize,
    stepnumber=1,
    %
    tabsize=2,
    %
    breaklines=true,
    breakatwhitespace=true,
    %
    columns=flexible,
    keepspaces=true
}

